<div class="login-box">
  <h2>Login</h2>
  <form action="/login" method="post">
    {{#if loginErr}}
      <div id="errorrr"><img
          src="https://i.imgur.com/GnyDvKN.png"
          style="width: 10px; height: 10px;"
        />

        <p id="invalid">&nbsp;invalid username or password</p></div>

    {{/if}}
    <div class="user-box">
      <input type="text" name="username" required="" />
      <label>Username</label>
    </div>
    <div class="user-box">
      <input type="password" name="password" required="" />
      <label>Password</label>
    </div>
    <a href="#" id="loginform">
      <span></span>
      <span></span>
      <span></span>
      <span></span>
      <input type="submit" value="L O G I N" style="" id="login" />
    </a>
  </form>
</div>